@model IEnumerable<InFerreteria.Models.ProveedorDto>
@{
    ViewData["Title"] = "Proveedores Inactivos";
}
<div class="container mt-4">
    <div class="d-flex align-items-center mb-3">
        <h3 class="mb-0 me-3">Proveedores Inactivos</h3>
        <a asp-action="Index" class="btn btn-outline-secondary ms-auto">← Volver</a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">No hay proveedores inactivos.</div>
    }
    else
    {
        <table class="table table-striped table-bordered">
            <thead><tr><th>Id</th><th>Nombre</th><th>Contacto</th><th>Correo</th><th>Acciones</th></tr></thead>
            <tbody>
                @foreach (var p in Model)
                {
                    <tr>
                        <td>@p.Id</td>
                        <td>@p.Nombre</td>
                        <td>@p.Contacto</td>
                        <td>@p.Correo</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@p.Id" class="btn btn-sm btn-outline-info">Detalles</a>
                            <a asp-action="Edit" asp-route-id="@p.Id" class="btn btn-sm btn-warning">Editar</a>
                            <form asp-action="Activar" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@p.Id" />
                                <button type="submit" class="btn btn-sm btn-outline-success">Activar</button>
                            </form>
                            <form asp-action="Delete" method="post" class="d-inline" onsubmit="return confirm('¿Eliminar definitivamente?');">
                                <input type="hidden" name="id" value="@p.Id" />
                                <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
