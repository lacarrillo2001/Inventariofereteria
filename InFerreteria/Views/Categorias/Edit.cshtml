@model InFerreteria.Models.CategoriaEditVm
@{
    ViewData["Title"] = "Editar Categoría";
}
<div class="container mt-4">
    <h3>Editar Categoría</h3>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <form asp-action="Edit" method="post" class="card p-3 shadow-sm">
        <input type="hidden" asp-for="Id" />
        <div class="mb-3">
            <label asp-for="Nombre" class="form-label"></label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Descripcion" class="form-label"></label>
            <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
        </div>
        <div class="form-check mb-3">
            <input asp-for="Activo" class="form-check-input" />
            <label asp-for="Activo" class="form-check-label">Activa</label>
        </div>
        <div class="d-flex gap-2">
            <button class="btn btn-primary">Guardar</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Volver</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
