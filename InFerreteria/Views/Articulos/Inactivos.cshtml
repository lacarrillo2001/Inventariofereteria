@model IEnumerable<InFerreteria.Models.ArticuloDto>
@{
    ViewData["Title"] = "Artículos Inactivos";
}

<div class="container mt-4">
    <div class="d-flex align-items-center mb-3">
        <h3 class="mb-0 me-3">Artículos Inactivos</h3>
        <a asp-action="Index" class="btn btn-outline-secondary ms-auto">← Volver a activos</a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info">No hay artículos inactivos.</div>
    }
    else
    {
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Código</th>
                    <th>Nombre</th>
                    <th>Precio</th>
                    <th>Stock</th>
                    <th>Estado</th>
                    <th style="width:220px">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var a in Model)
                {
                    <tr>
                        <td>@a.Codigo</td>
                        <td>@a.Nombre</td>
                        <td>@a.PrecioVenta</td>
                        <td>@a.Stock</td>
                        <td><span class="badge bg-secondary">Inactivo</span></td>
                        <td>
                            <a asp-action="Details" asp-route-codigo="@a.Codigo" class="btn btn-sm btn-outline-info">Detalles</a>
                            <a asp-action="Edit" asp-route-codigo="@a.Codigo" class="btn btn-sm btn-warning">Editar</a>

                            <form asp-action="Activar" method="post" class="d-inline">
                                <input type="hidden" name="codigo" value="@a.Codigo" />
                                <button type="submit" class="btn btn-sm btn-outline-success">Activar</button>
                            </form>

                            @* (Opcional) Eliminar físico si tienes Id real; si no, se mantendrá el workaround *@
                            <form asp-action="Delete" method="post" class="d-inline" onsubmit="return confirm('¿Eliminar definitivamente?');">
                                <input type="hidden" name="id" value="@a.Id" />
                                <input type="hidden" name="codigo" value="@a.Codigo" />
                                <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
