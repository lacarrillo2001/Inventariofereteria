@model InFerreteria.Models.ArticuloEditVm
@{
    ViewData["Title"] = "Editar Artículo";
}

<div class="container mt-4">
    <h3 class="mb-3">Editar Artículo</h3>

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <form asp-action="Edit" method="post" class="card p-3 shadow-sm">
        <input type="hidden" asp-for="Id" />

        <div class="form-row">
            <div class="form-group col-md-3">
                <label asp-for="Codigo"></label>
                <input asp-for="Codigo" class="form-control" readonly />
                <span asp-validation-for="Codigo" class="text-danger"></span>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="Nombre"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="form-group col-md-3">
                <label asp-for="StockMinimo"></label>
                <input asp-for="StockMinimo" class="form-control" />
                <span asp-validation-for="StockMinimo" class="text-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="CategoriaId">Categoría</label>
                <select asp-for="CategoriaId" class="form-control"
                    asp-items="@(new SelectList(Model.Categorias, "Id", "Texto"))"></select>

                <span asp-validation-for="CategoriaId" class="text-danger"></span>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="ProveedorId">Proveedor</label>
                <select asp-for="ProveedorId" class="form-control"
                    asp-items="@(new SelectList(Model.Proveedores, "Id", "Texto"))"></select>
                <span asp-validation-for="ProveedorId" class="text-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-4">
                <label asp-for="PrecioCompra"></label>
                <input asp-for="PrecioCompra" class="form-control" />
                <span asp-validation-for="PrecioCompra" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="PrecioVenta"></label>
                <input asp-for="PrecioVenta" class="form-control" />
                <span asp-validation-for="PrecioVenta" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Stock"></label>
                <input asp-for="Stock" class="form-control" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Descripcion"></label>
            <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
        </div>

        <div class="form-group form-check">
            <input asp-for="Activo" class="form-check-input" />
            <label class="form-check-label" asp-for="Activo">Activo</label>
        </div>

        <div class="d-flex">
            <button type="submit" class="btn btn-primary mr-2">Guardar</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Volver</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
