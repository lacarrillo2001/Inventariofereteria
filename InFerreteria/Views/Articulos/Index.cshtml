@model IEnumerable<InFerreteria.Models.ArticuloDto>
@{
    ViewData["Title"] = "Artículos";
}

<div class="container mt-4">
    <h3 class="mb-3">Artículos</h3>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <p>

        <a asp-action="Create" class="btn btn-sm btn-warning">Editar</a>
        <a asp-controller="Articulos" asp-action="Create" class="btn btn-primary">Nuevo Artículo</a>
    </p>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Código</th>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Stock</th>
                <th>Estado</th>
                <th style="width:220px">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var a in Model)
            {
                <tr>
                    <td>@a.Id</td>
                    <td>@a.Codigo</td>
                    <td>@a.Nombre</td>
                    <td>@a.PrecioVenta</td>
                    <td>@a.Stock</td>
                    <td>
                        @if (a.Activo)
                        {
                            <span class="badge bg-success">Activo</span>
                        }
                        else
                        {

                            <span class="badge bg-secondary">Inactivo</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-codigo="@a.Codigo" class="btn btn-sm btn-outline-info">Detalles</a>
                        <a asp-action="Edit" asp-route-codigo="@a.Codigo" class="btn btn-sm btn-warning">Editar</a>

                        @if (a.Activo)
                        {
                            <form asp-action="Inactivar" method="post" class="d-inline">
                                <input type="hidden" name="codigo" value="@a.Codigo" />
                                <button type="submit" class="btn btn-sm btn-outline-secondary">Inactivar</button>
                            </form>
                        }
                        else
                        {
                            <form asp-action="Activar" method="post" class="d-inline">
                                <input type="hidden" name="codigo" value="@a.Codigo" />
                                <button type="submit" class="btn btn-sm btn-outline-success">Activar</button>
                            </form>
                        }

                        <form asp-action="Delete" method="post" class="d-inline" onsubmit="return confirm('¿Eliminar definitivamente?');">
                            <input type="hidden" name="id" value="@a.Id" />
                            <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
