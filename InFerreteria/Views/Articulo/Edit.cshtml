@model WebApp.Data.Inventario.Entities.Articulo
@{
    ViewData["Title"] = "Editar artículo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar artículo</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <input asp-for="Id" type="hidden" />

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="mb-2">
                <label asp-for="Codigo"></label>
                <input asp-for="Codigo" class="form-control" />
                <span asp-validation-for="Codigo" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <label asp-for="CodigoBarras"></label>
                <input asp-for="CodigoBarras" class="form-control" />
                <span asp-validation-for="CodigoBarras" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <label asp-for="Nombre"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <label asp-for="PrecioCompra"></label>
                <input asp-for="PrecioCompra" type="number" step="0.01" class="form-control" />
                <span asp-validation-for="PrecioCompra" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <label asp-for="PrecioVenta"></label>
                <input asp-for="PrecioVenta" type="number" step="0.01" class="form-control" />
                <span asp-validation-for="PrecioVenta" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <label asp-for="StockActual"></label>
                <input asp-for="StockActual" type="number" step="1" class="form-control" />
                <span asp-validation-for="StockActual" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <label asp-for="StockMinimo"></label>
                <input asp-for="StockMinimo" type="number" step="1" class="form-control" />
                <span asp-validation-for="StockMinimo" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <label asp-for="CategoriaId"></label>
                <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.CategoriaId"></select>
                <span asp-validation-for="CategoriaId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ProveedorId"></label>
                <select asp-for="ProveedorId" class="form-control" asp-items="ViewBag.ProveedorId"></select>
                <span asp-validation-for="ProveedorId" class="text-danger"></span>
            </div>

            <!-- ✅ Checkbox Activo -->
            <div class="form-check form-switch mb-3">
                <input asp-for="Activo" class="form-check-input" type="checkbox" />
                <label asp-for="Activo" class="form-check-label"></label>
            </div>

            <div>
                <button type="submit" class="btn btn-primary">Guardar</button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Volver</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
