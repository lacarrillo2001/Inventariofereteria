@model IEnumerable<WebApp.Data.Inventario.Entities.Categoria>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>


<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Activo</th>
            <th style="width:200px;">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="@(item.Activo ? "" : "table-warning")">
                <td>@item.Nombre</td>
                <td>@(item.Activo ? "Sí" : "No")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Detalles</a>

                    <form asp-action="ToggleActivo" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@item.Id" />
                        <input type="hidden" name="q" value="@(ViewBag.Query ?? string.Empty)" />
                        <input type="hidden" name="page" value="@(ViewBag.Page ?? 1)" />
                        <input type="hidden" name="verInactivos" value="@(ViewBag.VerInactivos ?? false)" />
                        <button type="submit" class="btn btn-sm @(item.Activo ? "btn-warning" : "btn-success")">
                            @(item.Activo ? "Desactivar" : "Activar")
                        </button>
                    </form>

                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
