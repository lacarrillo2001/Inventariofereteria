@model IEnumerable<WebApp.Data.Inventario.Entities.Categoria>
@{
    ViewData["Title"] = "Categorías inactivas";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var q = (string)(ViewBag.Query ?? "");
    int page = (int)(ViewBag.Page ?? 1);
    int pageSize = (int)(ViewBag.PageSize ?? 10);
    int total = (int)(ViewBag.Total ?? 0);
    int last = (int)Math.Ceiling(total / (double)pageSize);
}
<h1>Categorías inactivas</h1>

<form method="get" asp-action="Inactivos" class="row g-2 mb-3">
  <div class="col-auto">
    <input type="text" name="q" value="@q" class="form-control" placeholder="Buscar..." />
  </div>
  <div class="col-auto">
    <button class="btn btn-outline-primary" type="submit">Buscar</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Ver activas</a>
  </div>
</form>

<table class="table table-striped">
  <thead>
    <tr><th>Nombre</th><th style="width:180px;">Acciones</th></tr>
  </thead>
  <tbody>
  @foreach (var item in Model)
  {
    <tr class="table-warning">
      <td>@item.Nombre</td>
      <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Detalles</a>
        <form asp-action="Activar" method="post" class="d-inline">
          @Html.AntiForgeryToken()
          <input type="hidden" name="id" value="@item.Id" />
          <input type="hidden" name="q" value="@q" />
          <input type="hidden" name="page" value="" />
          <button type="submit" class="btn btn-sm btn-success">Activar</button>
        </form>
      </td>
    </tr>
  }
  </tbody>
</table>

@if (last > 1)
{
  <div class="d-flex justify-content-between">
    <a class="btn btn-outline-secondary @(page <= 1 ? "disabled" : "")"
       asp-action="Inactivos" asp-route-page="@(page-1)" asp-route-q="@q">Anterior</a>
    <span>Página  de @last (@total registros)</span>
    <a class="btn btn-outline-secondary @(page >= last ? "disabled" : "")"
       asp-action="Inactivos" asp-route-page="@(page+1)" asp-route-q="@q">Siguiente</a>
  </div>
}
